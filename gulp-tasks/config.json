{
  "COMPATIBILITY": [
    "last 2 versions",
    "ie >= 10",
    "ios >= 10"
  ],
  "CSS": {
    "src": "/scss/**/*.scss",
    "dest": "/css"
  },
  "ERROR": "Error: <%= error.message %>",
  "ESM": {
    "entry": "/esm/main.js",
    "src": "/esm/**/*.js",
    "dest": "/js"
  },
  "FAVICON": {
    "entry": "/images/favicon-src.png",
    "dest": "/favicons"
  },
  "FONTS": {
    "src": "/fonts/**/*.{eot,otf,svg,ttf,woff,woff2}",
    "dest": "/fonts"
  },
  "HTML": {
    "src": "/html/**/*.html",
    "dest": "/",
    "basePath": "/html/templates"
  },
  "ICONS": {
    "src": "/svg/**/*.svg",
    "dest": "/icons",
    "templates": "/svg/templates/"
  },
  "IMAGES": {
    "src": "/images/**/*.{gif,jpg,jpeg,png,svg}",
    "dest": "/images"
  },
  "JS": {
    "src": "/js/*.js",
    "dest": "/js"
  },
  "PATH": {
    "base": "./public",
    "src": "./src",
    "dest": "./public/dist",
    "vendor": "./node_moduls"
  },
  "SERVER": {
    "base": "./public",
    "port": 3000
  },
  "APP": {
    "server": false,
    "proxyServer": "http://127.0.0.1:8000",
    "watchFiles": [
      "./src/**/*.{scss,css,html,js}",
      "./public/**/*.{scss,css,html,js}",
      "../**/templates/**/*.html",
      "!node_modules/"
    ]
  }
}
